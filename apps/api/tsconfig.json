{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Basic Options */
    "incremental": true,
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    /* Module Resolution Options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": [
      "jest",
      "node"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "**/__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}